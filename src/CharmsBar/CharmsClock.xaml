<Window x:Class="CharmsBarPort.CharmsClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharmsBarPort"
        mc:Ignorable="d"
        Title="Charms Bar Clock" Width="506" Height="140">
    <Grid Background="#dd111111">
        <StackPanel Grid.Row="1">
            <Image Source="Assets/Images/Icon151.png" HorizontalAlignment="Left" Width="25" Margin="30,0,0,-106"/>
            <Image Source="Assets/Images/BatteryFull.png" HorizontalAlignment="Left" Width="25" Margin="30,0,0,-180"/>
            <Label Name="Clock" Content="12:00" Foreground="white" FontFamily="Segoe UI light" FontSize="85" VerticalAlignment="Bottom" Margin="70,0,0,-106"/>
            <Label Name="Week" Content="Wednesday" Foreground="white" FontFamily="Segoe UI Semilight" FontSize="35" VerticalAlignment="Bottom" Margin="290,0,0,-16"/>
            <Label Name="Date" Content="June 11" Foreground="white" FontFamily="Segoe UI Semilight" FontSize="35" VerticalAlignment="Bottom" Margin="290,0,0,-16"/>
        </StackPanel>
    </Grid>
</Window>
